<mvc:View
  controllerName="projectsd.controller.App"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:tnt="sap.tnt">

  <Page id="mainPage" showHeader="false" class="appContainer">
    <content>
      <HBox id="_IDGenHBox" height="100%" class="fullHeight" width="100%">
    
        <!-- SIDEBAR -->
        <VBox id="_IDGenVBox" width="250px" class="customSidebar" height="100%" alignItems="Center">
          <Image id="_IDGenImage1" src="/images/logo.png"
                 width="120px"
                 class="logoImage" />

          <tnt:NavigationList id="_IDGenNavigationList" itemSelect="onSideNavSelect" class="navList">
            <tnt:NavigationListItem id="_IDGenNavigationListItem" text="Dashboard" key="Dashboard" icon="sap-icon://bar-chart" />
            <tnt:NavigationListItem id="_IDGenNavigationListItem1" text="Articles" key="Article" icon="sap-icon://product" />
            <tnt:NavigationListItem id="_IDGenNavigationListItem2" text="Clients" key="Client" icon="sap-icon://customer" />
            <tnt:NavigationListItem id="_IDGenNavigationListItem3" text="Commandes" key="Commande" icon="sap-icon://sales-order" />
            <tnt:NavigationListItem id="_IDGenNavigationListItem4" text="Transporter" key="transporter" icon="sap-icon://shipping-status" />
            <tnt:NavigationListItem id="_IDGenNavigationListItem5" text="Vehicule" key="vehicule" icon="sap-icon://car-rental" />
            <tnt:NavigationListItem id="_IDGenNavigationListItem6" text="Chauffeur" key="chauffeur" icon="sap-icon://employee" />
            <!-- <tnt:NavigationListItem id="_IDGenNavigationListItem7" text="Bascule" key="Bascule" icon="sap-icon://measure" /> -->
        

          </tnt:NavigationList>
        </VBox>

        <!-- CONTENU PRINCIPAL -->
        <VBox id="_IDGenVBox1" width="100%" class="mainContent">
          <Bar id="_IDGenBar" design="Header" class="mainHeader">
          <contentLeft>
            <Button id="_IDGenButton122" icon="sap-icon://menu2" press="onToggleSidebar" type="Transparent" />
          </contentLeft>
            <contentMiddle>
              <Title id="_IDGenTitle6" text="Pont Bascule  " level="H3" class="pageTitle"/>
            </contentMiddle>
          </Bar>
          


          <App id="app"/>
        </VBox>

      </HBox>
    </content>
  </Page>
</mvc:View>
